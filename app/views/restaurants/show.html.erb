<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="card bg-white p-3 mt-3 $border-radius">
      <div class="card-infos d-flex justify-content-between align-items-center my-2">
        <h2 class="m-0" ><%= link_to @restaurant.name, restaurant_path(@restaurant), class: "m-0" %></h2>
        <%= render "infos_short", restaurant: @restaurant, reviews: @reviews %>
      </div>
      <p class="my-2"> <%= @restaurant.address%> </p>
      <div class="d-flex align-items-center my-2">
        <i class="fa fa-phone mr-2"></i>
        <p class="m-0"> <%= @restaurant.phone_number%> </p>
      </div>
<!--       <div>
        <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-danger $border-radius my-2"%>
      </div> -->
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-primary rounded mt-2"%>
  </div>
</div>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2 class="p-3 m-0">Add your review</h2>
    <%= render "review_form", restaurant: @restaurant, review: @review %>
  </div>
</div>
<% if @reviews.length > 0 %>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <ul class="list-group">
        <% if @reviews.length > 1 %>
        <h2 class="p-3 m-0"> <%= @reviews.length %> reviews for this restaurant</h2>
        <% end %>
        <% @reviews.each do |review| %>
          <li class="list-group-item bg-light p-3 mb-2 rounded border">
            <div class="d-flex align-items-center my-2">
              <i class="fa fa-star mr-2"></i>
              <p class="m-0"> <%= review.rating%> </p>
            </div>
            <p class="my-2 font-italic"> <%= review.content%> </p>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
