<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div class="form-card bg-white mt-4 p-4">
      <%= simple_form_for([@restaurant, @review]) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (0..5) %>
        <%= f.submit "Submit your review", class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
